<h1 class="mt-3 mb-5">Welcome to the Articles section</h1>

  <ul class="list-unstyled">
    <div class="d-flex flex-wrap">
        <% @articles.each do |article| %>
        <div class="card mb-3 ms-3" style="width: 18rem; height: 14rem;">
          <div class="card-body d-flex flex-column justify-content-center align-items-center">
            <li  class="card-title text-center fw-bold">
                <%= link_to article.title, article_path(article), class: "text-decoration-none text-primary" %>
            </li>
            <%= link_to "Modify article", article_path(article), class:"btn btn-light mb-2" %>
             <%= link_to "Delete article", article_path(article), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:"btn btn-dark" %>
          </div>
      </div>
        <% end %>

      </div>
    </div>

    <div>
  <%= link_to "Add a new article", articles_new_path, class: "btn btn-info ms-auto me-auto" %>
</div>
  </ul>
