<h1>Welcome to the Articles section</h1>

<div>
  <ul>
    <% @articles.each do |article| %>
    <li>
      <%= link_to article.title, article_path(article) %>
    </li>
    <button><%= link_to "Delete article", article_path(article), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></button>
    <% end %>
  </ul>
</div>
